# =============================================================================
# SignalDrift -- Root Environment Variables
# =============================================================================
# Copy this file to .env and fill in real values.
# NEVER commit .env to version control.
# =============================================================================

# Backend
BACKEND_PORT=8000
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
LOG_LEVEL=info

# Frontend
# Leave empty -- Vite proxy (dev) and Nginx (prod) handle /api routing automatically.
# Only set this if the backend is on a completely different domain (e.g. https://api.signaldrift.com).
VITE_API_URL=
